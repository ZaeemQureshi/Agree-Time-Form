@model IEnumerable<Agritime.Models.Bank>

@{
    ViewData["Title"] = "Index";
}

<h1>Bank List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Bank</a>
</p>

 <div class="card">
    <div class="card-header">

        <h3 class="card-title">Bank List</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>
           
            <th>Edit</th>
                    <th>
                        Details
                    </th>
                    <th>
                        Delete
                    </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNo)
            </td>
           
            
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
            
        </tr>
}
    </tbody>
</table>
    </div>
</div>

